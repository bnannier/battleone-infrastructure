{
  "$id": "https://schemas.ory.sh/presets/kratos/identity.email.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BattleOne User Identity Schema",
  "description": "Identity schema for BattleOne users with comprehensive profile information",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email Address",
          "description": "Primary email address for the user account",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "full_name": {
          "type": "string",
          "title": "Full Name",
          "description": "Complete name of the user",
          "minLength": 2,
          "maxLength": 100
        },
        "first_name": {
          "type": "string",
          "title": "First Name", 
          "description": "User's first name",
          "minLength": 1,
          "maxLength": 50
        },
        "last_name": {
          "type": "string",
          "title": "Last Name",
          "description": "User's last name", 
          "minLength": 1,
          "maxLength": 50
        },
        "username": {
          "type": "string",
          "title": "Username",
          "description": "Unique username for the account",
          "pattern": "^[a-zA-Z0-9_-]{3,30}$",
          "minLength": 3,
          "maxLength": 30
        },
        "avatar_url": {
          "type": "string",
          "format": "uri",
          "title": "Avatar URL",
          "description": "URL to user's profile picture"
        },
        "bio": {
          "type": "string",
          "title": "Bio",
          "description": "Short biography or description",
          "maxLength": 500
        },
        "date_of_birth": {
          "type": "string",
          "format": "date",
          "title": "Date of Birth",
          "description": "User's date of birth (YYYY-MM-DD format)"
        },
        "phone": {
          "type": "string",
          "title": "Phone Number",
          "description": "User's phone number",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        },
        "timezone": {
          "type": "string",
          "title": "Timezone",
          "description": "User's timezone",
          "default": "UTC",
          "enum": [
            "UTC",
            "America/New_York",
            "America/Los_Angeles", 
            "America/Chicago",
            "America/Denver",
            "Europe/London",
            "Europe/Paris",
            "Europe/Berlin",
            "Asia/Tokyo",
            "Asia/Shanghai",
            "Australia/Sydney"
          ]
        },
        "language": {
          "type": "string",
          "title": "Preferred Language",
          "description": "User's preferred language",
          "default": "en",
          "enum": ["en", "es", "fr", "de", "ja", "zh", "pt", "ru"]
        },
        "country": {
          "type": "string",
          "title": "Country",
          "description": "User's country",
          "pattern": "^[A-Z]{2}$",
          "minLength": 2,
          "maxLength": 2
        },
        "marketing_consent": {
          "type": "boolean",
          "title": "Marketing Consent",
          "description": "Consent to receive marketing communications",
          "default": false
        },
        "analytics_consent": {
          "type": "boolean", 
          "title": "Analytics Consent",
          "description": "Consent to analytics tracking",
          "default": true
        },
        "newsletter_subscription": {
          "type": "boolean",
          "title": "Newsletter Subscription",
          "description": "Subscribe to newsletter updates",
          "default": false
        },
        "account_type": {
          "type": "string",
          "title": "Account Type",
          "description": "Type of user account",
          "default": "personal",
          "enum": ["personal", "business", "creator", "enterprise"]
        },
        "social_links": {
          "type": "object",
          "title": "Social Media Links",
          "description": "User's social media profiles",
          "properties": {
            "twitter": {
              "type": "string",
              "format": "uri",
              "title": "Twitter Profile"
            },
            "linkedin": {
              "type": "string", 
              "format": "uri",
              "title": "LinkedIn Profile"
            },
            "github": {
              "type": "string",
              "format": "uri", 
              "title": "GitHub Profile"
            },
            "website": {
              "type": "string",
              "format": "uri",
              "title": "Personal Website"
            }
          },
          "additionalProperties": false
        },
        "preferences": {
          "type": "object",
          "title": "User Preferences",
          "description": "Application-specific user preferences",
          "properties": {
            "theme": {
              "type": "string",
              "title": "UI Theme",
              "default": "light",
              "enum": ["light", "dark", "auto"]
            },
            "notifications": {
              "type": "object",
              "title": "Notification Preferences", 
              "properties": {
                "email": {
                  "type": "boolean",
                  "title": "Email Notifications",
                  "default": true
                },
                "push": {
                  "type": "boolean", 
                  "title": "Push Notifications",
                  "default": true
                },
                "sms": {
                  "type": "boolean",
                  "title": "SMS Notifications", 
                  "default": false
                }
              },
              "additionalProperties": false
            },
            "privacy": {
              "type": "object",
              "title": "Privacy Settings",
              "properties": {
                "profile_visibility": {
                  "type": "string",
                  "title": "Profile Visibility",
                  "default": "private",
                  "enum": ["public", "private", "friends"]
                },
                "show_activity": {
                  "type": "boolean",
                  "title": "Show Activity Status",
                  "default": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "subscription": {
          "type": "object",
          "title": "Subscription Information",
          "description": "User's subscription details",
          "properties": {
            "plan": {
              "type": "string",
              "title": "Subscription Plan",
              "default": "free",
              "enum": ["free", "basic", "premium", "enterprise"]
            },
            "features": {
              "type": "array",
              "title": "Enabled Features",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "security": {
          "type": "object",
          "title": "Security Settings",
          "description": "Security-related preferences",
          "properties": {
            "two_factor_enabled": {
              "type": "boolean",
              "title": "Two-Factor Authentication",
              "default": false
            },
            "login_alerts": {
              "type": "boolean",
              "title": "Login Alerts",
              "default": true
            },
            "session_timeout": {
              "type": "integer",
              "title": "Session Timeout (minutes)",
              "default": 1440,
              "minimum": 15,
              "maximum": 10080
            }
          },
          "additionalProperties": false
        },
        "verification": {
          "type": "object",
          "title": "Verification Status",
          "description": "Account verification information",
          "properties": {
            "email_verified": {
              "type": "boolean",
              "title": "Email Verified",
              "default": false
            },
            "phone_verified": {
              "type": "boolean", 
              "title": "Phone Verified",
              "default": false
            },
            "identity_verified": {
              "type": "boolean",
              "title": "Identity Verified",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "metadata": {
          "type": "object",
          "title": "Additional Metadata",
          "description": "Custom metadata fields",
          "additionalProperties": true
        }
      },
      "required": ["email"],
      "additionalProperties": false
    }
  }
}