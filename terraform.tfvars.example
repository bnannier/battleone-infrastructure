# DigitalOcean Configuration
digitalocean_token = "your-digitalocean-token-here"

# SSH Keys (generate with: ssh-keygen -t rsa -b 4096)
ssh_private_key = "-----BEGIN OPENSSH PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END OPENSSH PRIVATE KEY-----"
ssh_public_key  = "ssh-rsa YOUR_PUBLIC_KEY_HERE user@hostname"

# Infrastructure Settings
region       = "tor1"
droplet_size = "s-2vcpu-4gb"

# Database Configuration
postgres_password = "secure-postgres-password"
postgres_user     = "battleone_user"
postgres_db       = "battleone"

# Redis Configuration
redis_password = "secure-redis-password"